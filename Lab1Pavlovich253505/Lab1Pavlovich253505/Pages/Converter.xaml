<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab1Pavlovich253505.Converter"
             Title="Converter">
    <Grid RowDefinitions="*"
          ColumnDefinitions="*">
        
        <Grid RowDefinitions="auto,auto"
              ColumnDefinitions="*"
              Grid.Row="1"
              VerticalOptions="Center">

            <Grid RowDefinitions="auto, auto"
                  ColumnDefinitions="*, *"
                  Grid.Row="0"
                  Grid.Column="0"
                  >

                <Label Text="BYN"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Grid.Row="0"
                       Grid.Column="0"/>

                <Entry Keyboard="Numeric"
                       Margin="10"
                       Grid.Row="1"
                       Grid.Column="0"/>

                <Picker Grid.Row="0"
                        Grid.Column="1"
                        WidthRequest="100"
                        HorizontalTextAlignment="Center">
                    
                    <Picker.Items>
                        <x:String>"RUB"</x:String>
                        <x:String>"EUR"</x:String>
                        <x:String>"USD"</x:String>
                        <x:String>"CHF"</x:String>
                        <x:String>"CNY"</x:String>
                        <x:String>"GPB"</x:String>
                    </Picker.Items>
                </Picker>

                <Entry Keyboard="Numeric"
                       Margin="10"
                       Grid.Row="1"
                       Grid.Column="1"/>
            </Grid>
            
            <DatePicker Grid.ColumnSpan="2"
                        Grid.Row="1"
                        HorizontalOptions="Center"
                        Margin="50"/>
        </Grid>
    </Grid>
</ContentPage>