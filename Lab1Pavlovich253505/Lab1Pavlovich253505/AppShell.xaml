<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lab1Pavlovich253505.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lab1Pavlovich253505"
    Shell.FlyoutBehavior="Flyout"
    Title="Lab1Pavlovich253505">

    <FlyoutItem Title="Main">
        <ShellContent Title="Main"
                      ContentTemplate="{DataTemplate local:MainPage}"
        />
    </FlyoutItem>

    <FlyoutItem Title="Calculator">
        <ShellContent Title="Calculator"
                      ContentTemplate="{DataTemplate local:CalcPage}"
        />
    </FlyoutItem>

    <FlyoutItem Title="Progress Bar">
        <ShellContent Title="Progress bar"
                      ContentTemplate="{DataTemplate local:ProgressBar}"
        />
    </FlyoutItem>

    <FlyoutItem Title="Hotel rooms">
        <ShellContent Title="Hotel rooms"
                      ContentTemplate="{DataTemplate local:HotelRoomsPage}"
        />
    </FlyoutItem>

    <FlyoutItem Title="Converter">
        <ShellContent Title="Converter"
                      ContentTemplate="{DataTemplate local:ConverterPage}"/>
    </FlyoutItem>
</Shell>
