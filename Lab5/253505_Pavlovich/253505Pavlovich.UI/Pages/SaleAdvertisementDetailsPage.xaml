<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models ="clr-namespace:_253505Pavlovich.UI.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="models:SaleAdvertisementDetailsPageViewModel"
             x:Class="_253505Pavlovich.UI.Pages.SaleAdvertisementDetailsPage"
             Title="SaleAdvertisementDetails">
    
    <VerticalStackLayout>
        <Label Text="{Binding SaleAdvertisement.Name, StringFormat = 'Description: {0}'}"/>
        <Label Text="Car information:"/>
        <Label Text="{Binding SaleAdvertisement.CarInfo.Model, StringFormat= 'Car model: {0}'}"/>
        <Label Text="{Binding SaleAdvertisement.CarInfo.ProductionYear, StringFormat='Production year: {0}'}"/>
        <Label Text="{Binding SaleAdvertisement.Price, StringFormat='Price: {0}$'}"/>
        <Label Text="Salesman information:"/>
        <Label Text="{Binding SaleAdvertisement.SalesmanInfo.Name, StringFormat='Name: {0}'}"/>
        <Label Text="{Binding SaleAdvertisement.SalesmanInfo.PhoneNumber, StringFormat='Phone number: {0}'}"/>
    </VerticalStackLayout>

</ContentPage>